<configuration>
    <appender name = "FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/info-logs.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- созает новый файл каждый день -->
            <fileNamePattern>slf4jlogbackexample.%d{yyyy-MM-dd}.log</fileNamePattern>
            <!-- Храним файлы логов 2 дня -->
            <maxHistory>2</maxHistory>
            <!-- Максимальный размер файлов лога 10MB -->
            <totalSizeCap>10MB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name = "CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%magenta(%d{HH:mm:ss.SSS}) [%thread]  %highlight(%-5level) %cyan(%logger{36}) - %blue(%msg%n)</pattern>
        </encoder>
    </appender>
    <root level = "info">
        <appender-ref ref = "FILE"/>
        <appender-ref ref = "CONSOLE"/>
    </root>
</configuration>